{
  "name": "@mayankarora/keebs",
  "version": "0.1.0",
  "description": "React keyboard shortcut management with visual discoverability",
  "type": "module",
  "scripts": {
    "build:styles": "npx tsx scripts/build-styles.ts",
    "prepublish": "pnpm build:styles",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "publish:jsr": "pnpm build:styles && npx jsr publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mayank-arora/keebs.git"
  },
  "homepage": "https://github.com/mayank-arora/keebs#readme",
  "bugs": {
    "url": "https://github.com/mayank-arora/keebs/issues"
  },
  "keywords": [
    "react",
    "keyboard",
    "shortcuts",
    "hotkeys",
    "accessibility"
  ],
  "author": "Mayank Arora",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "jsdom": "^28.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.27.0"
